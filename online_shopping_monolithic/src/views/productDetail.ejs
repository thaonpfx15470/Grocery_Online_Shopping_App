<%- include('./includes/header.ejs')%>
    <div class="card mb-3" style="max-width: 100%;">
        <div class="row g-0">
            <div class="col-md-4">
            <img src="<%= data.banner %>" class="img-fluid rounded-start" alt="<%= data.name %>">
            </div>
            <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title">Name: <%= data.name %></h5>
                <p class="card-text">Description: <%= data.desc %></p>
                <p class="card-text">Price: <%= data.price %></p>
                <p class="card-text"><small class="text-body-secondary"><%= data.suplier %></small></p>
            </div>
            </div>
        </div>
    </div>
<%- include('./includes/footer.ejs')%>